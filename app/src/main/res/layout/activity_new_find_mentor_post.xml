<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPost.FindMentorPost.NewFindMentorPost">

    <include
        android:id="@+id/basic_tool_bar_NewFindMentor"
        layout="@layout/tool_bar_basic_no_logo_find_mentor" />

    <EditText
        android:id="@+id/title_ET_NFMentor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="top"
        android:hint="제목"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basic_tool_bar_NewFindMentor" />

    <EditText
        android:id="@+id/contents_ET_NFMentor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:gravity="top"
        android:hint=" 본문"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_BTN_NFMentor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_ET_NFMentor" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_BTN_NFMentor"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:text="등록"
        android:textSize="20sp"
        android:background="@drawable/background_button_round_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>